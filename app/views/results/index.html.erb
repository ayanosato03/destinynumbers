<%= render "shared/header" %>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Cormorant+Unicase:wght@300;400;500;600;700&family=IM+Fell+French+Canon+SC&display=swap" rel="stylesheet">
<div class="index-main">
 <div class="hero">
<%= image_tag "fuji.jpg", class: "img-fluid", alt: "Responsive image" %>
 <div class="hero-items">
  <div class="hero-text">
   <div class="hero-text__main">数秘術</div>
    <div class="hero-text__sub">個人の生年月日を計算式に当てはめて特定の数字を導き出し<br>
    そこから性格・才能・運命・運勢・使命・人生のテーマなどを知ることができます</div>
    </div>
    <%= form_with model:@user,url: results_path, method: :post, class: 'form-main', local: true do |f| %>
  <div class="form-group">
    <div class='form-text-wrap'>
     <label class="form-text">お名前</label>
     <span class="indispensable">必須</span>
     </div>
     <div class='input-name-wrap'>
      <%= f.text_field :name, class:"input-name", id:"name", placeholder:"例) 太郎" %>
     </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">生年月日</label>
      <span class="indispensable">必須</span>
    </div>
  <div class="birth-btn-wrap">
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  <div class='register-btn'>
    <%= f.submit "占う" ,class:"register-red-btn" %>

  </div>
 </div>
</div>
</div>
</div>
<% end %>





